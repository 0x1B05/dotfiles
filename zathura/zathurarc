# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10

set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set statusbar-home-tilde true
set statusbar-page-percent true
set page-padding 1
set selection-clipboard clipboard

set default-bg "#111111"
set recolor-lightcolor "#111111"
set statusbar-bg "#427b58"
set recolor-darkcolor "#dddddd"
set highlight-fg '#ffffff'

map i zoom in
map o zoom out
map = adjust_window best-fit   # Reset view
map w adjust_window width      # Fit width (allows scrolling)
map e zoom original            # 100% view

map u scroll half-up
map d scroll half-down

map J navigate next
map K navigate previous

map H scroll half-left
map L scroll half-right
map D toggle_page_mode
map p print
map r rotate rotate-cw
map R rotate rotate-ccw
map w adjust_window width
map z adjust_window best-fit

map r rotate rotate-cw
map R rotate rotate-ccw
map <C-r> reload
map I recolor
map D toggle_page_mode         # Toggle single/dual page
map <Tab> toggle_index

#!/usr/bin/env bash

FILE="$1"
[ -z "$FILE" ] && exit 1

BASENAME=$(basename "$FILE")

ACTION=$(notify-send \
    -u critical \
    -t 5000 \
    --action="delete=Delete" \
    --action="cancel=Cancel" \
    --wait \
    "Delete Image?" \
    "File: $BASENAME")

if [ "$ACTION" = "delete" ]; then
    rm "$FILE"
    notify-send -u low -t 2000 "swayimg" "Deleted: $BASENAME"
fi
